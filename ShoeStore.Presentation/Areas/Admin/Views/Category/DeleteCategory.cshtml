@model ShoeStore.Domain.DTOs.AdminSide.Category.EditCategoryDTO


<div class="page-body">
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-header-left">
                        <h3 class="mb-3">
                            حذف دسته بندی
                        </h3>
                        @if (Model.ParentId == null)
                        {
                            <h5 style="color:red">با حذف این دسته بندی تمام زیر دسته بندی های آن هم حذف خواهد شد</h5>
                        }

                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item">
                            <a asp-action="Index" asp-controller="Home" asp-area="Admin">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">محصولات </li>
                        <li class="breadcrumb-item active">حذف دسته بندی</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row product-adding">

                            <div class="col-xl-7">
                                <form class="needs-validation add-product-form" novalidate="" asp-action="DeleteCategoryRecord"
                                      asp-area="Admin" asp-controller="Category" method="post" asp-route-categoryId="@Model.Id">
                                    <div class="form">
                                        <div class="form-group mb-3 row">
                                            <label for="validationCustom01" class="col-xl-3 col-sm-4 mb-0"> عنوان دسته بندی : </label>
                                            <div class="col-xl-8 col-sm-7">
                                                <input readonly class="form-control" id="validationCustom01" type="text" required="" value="@Model.Name">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form">
                                        <div class="form-group mb-3 row">
                                            <label for="validationCustom01" class="col-xl-3 col-sm-4 mb-0"> تاریخ ایجاد : </label>
                                            <div class="col-xl-8 col-sm-7">
                                                <input readonly class="form-control" id="validationCustom01" type="text" required="" value="@Model.CreateDate">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form">
                                        <div class="form-group row">
                                            <div class="offset-xl-3 offset-sm-4 mt-4">
                                                <button type="submit" class="btn btn-primary">حذف</button>
                                                <a asp-action="ListOfCategories" asp-area="Admin" asp-controller="Category" type="button" class="btn btn-light">لغو</a>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>
