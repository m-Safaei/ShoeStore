@model ICollection<ShoeStore.Domain.DTOs.AdminSide.Product.SizeAdminSideDTO>


<div class="page-body">
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-header-left">
                        <h3>
                            سایز ها
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item">
                            <a asp-action="Index" asp-controller="Home" asp-area="Admin">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">محصولات </li>
                        <li class="breadcrumb-item active">سایز </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <a type="button" class="btn btn-primary add-row mt-md-0 mt-2" asp-action="CreateSize" asp-area="Admin" asp-controller="Size">درج سایز جدید</a>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive table-desi">
                            <table class="table all-package table-category " id="editableTable">
                                <thead>
                                    <tr>

                                        <th>Id</th>
                                        <th>سایز</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td data-field="Id">@item.Id</td>

                                                <td data-field="name">
                                                    <h5>@item.SizeNumber</h5>
                                                </td>
                                                <td>
                                                    <a asp-action="EditSize" asp-area="Admin" asp-controller="Size" asp-route-sizeId="@item.Id">
                                                        <i class="fa fa-edit" title="ویرایش"></i>
                                                    </a>

                                                    <a asp-action="DeleteSize" asp-area="Admin" asp-controller="Size" asp-route-sizeId="@item.Id">
                                                        <i class="fa fa-trash" title="حذف"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>
