@model ShoeStore.Domain.DTOs.SiteSide.Account.UserRegisterDto
<!-- breadcrumb start -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="page-title">
                    <h2>ایجاد حساب کاربری</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <nav aria-label="breadcrumb" class="theme-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">خانه</a></li>
                        <li class="breadcrumb-item active" aria-current="page">ایجاد حساب کاربری</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb End -->
<!--section start-->
<section class="register-page section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>ایجاد حساب کاربری</h3>
                <div class="theme-card">
                    <form class="theme-form" asp-action="Register" asp-controller="Account" method="post">
                        <div class="form-row row">
                            <div class="col-md-6">
                                <label for="email">نام</label>
                                <input asp-for="FirstName" type="text" class="form-control" id="fname" placeholder="نام" required="">
                                <span style="color: red; position: relative;top: -20px" asp-validation-for="FirstName"></span>
                            </div>
                            <div class="col-md-6">
                                <label for="review">نام خانوادگی </label>
                                <input asp-for="LastName" type="text" class="form-control" id="lname" placeholder="نام خانوادگی" required="">
                                <span style="color:red; position: relative;top: -20px" asp-validation-for="LastName"></span>
                            </div>
                        </div>
                        <div class="form-row row">
                            <div class="col-md-6">
                                <label for="email">موبایل</label>
                                <input asp-for="Mobile" type="text" class="form-control" id="email" placeholder="موبایل" required="">
                                <span style="color:red; position: relative;top: -20px" asp-validation-for="Mobile"></span>
                            </div>
                            <div class="col-md-6">
                                <label for="review">پسورد </label>
                                <input asp-for="Password" type="password" class="form-control" id="review" placeholder="پسورد را وارد کنید" required="">
                                <span style="color:red; position: relative;top: -20px" asp-validation-for="Password"></span>
                            </div>
                            <div class="col-md-6" style="margin-bottom: 10px">
                                <label for="review">تکرار پسورد </label>
                                <input asp-for="RePassword" type="password" class="form-control" id="review" placeholder="پسورد را وارد کنید" required="">
                                <span style="color: red; position: relative;top: -20px" asp-validation-for="RePassword"></span>
                            </div>
                            <div><button type="submit" class="btn btn-solid w-auto">ایجاد حساب کاربری</button></div>
                            
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Section ends-->