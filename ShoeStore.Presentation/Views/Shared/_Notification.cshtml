@using Microsoft.AspNetCore.Html
@if (TempData["InfoMessage"] != null)
{
    <script>
        Toastify({

            text: "@(new HtmlString(TempData["InfoMessage"] as string))",

            duration: 4000,
            gravity: "bottom",
            close: true

        }).showToast();
    </script>
}
@if (TempData["SuccessMessage"] != null)
{
    <script>
        Toastify({
            text: "@(new HtmlString(TempData["SuccessMessage"] as string))",
            duration: 4000,
            close: true,
            style: {
                background: "linear-gradient(to right, #00b09b, #96c93d)"
            }
        }).showToast();
    </script>
}

