@if (TempData["InfoMessage"] != null)
{
    <script>
        Toastify({

            text: "کاربری با شماره موبایل وارد شده در سیستم وجود دارد",

            duration: 4000,
            gravity: "bottom",
            close: true,
            stopOnFocus: true

        }).showToast();
    </script>
}
@if (TempData["SuccessMessage"] != null)
{
    <script>
        Toastify({
            text: "عملیات باموفقیت انجام شد",
            duration: 4000,
            close: true,
            style: {
                background: "linear-gradient(to right, #00b09b, #96c93d)"
            }
        }).showToast();
    </script>
}